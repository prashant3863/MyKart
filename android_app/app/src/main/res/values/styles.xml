<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nav_drawer_list_item_text">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_list_item_name">
        <item name="android:padding">8dp</item>
        <item name="android:color">@color/textDarkGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_list_item_price" parent="@style/product_list_item_name">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="product_item_name">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="product_item_price" parent="@style/product_item_name">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_item_description">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
