<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nav_drawer_list_item_text">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_list_item_name">
        <item name="android:padding">8dp</item>
        <item name="android:color">@color/textDarkGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_list_item_price" parent="@style/product_list_item_name">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="product_item_name">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="product_item_price" parent="@style/product_item_name">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_item_description">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="navigation_drawer_shop_for_text">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>
    <style name="navigation_drawer_child_element_text">
        <item name="android:paddingLeft">?android:attr/expandableListPreferredChildPaddingLeft
        </item>
        <item name="android:textSize">17dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>
    <style name="navigation_drawer_group_element_text">
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ccffffff</item>
    </style>

    <style name="dont_miss_out_banner">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="select_a_category_text_view">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="gender_selection_container">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="gender_selection_image">
        <item name="android:scaleType">fitEnd</item>
    </style>
    <style name="gender_selection_text">
        <item name="android:background">#4b000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="cart_checkout_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">@string/checkout</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#40d47e</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="cart_line_item_quantity_spinner_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
    <style name="cart_line_item_quantity_spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_toRightOf">@id/cart_line_item_quantity</item>
        <item name="android:layout_below">@id/cart_line_item_name</item>
        <item name="android:layout_marginTop">9.5dp</item>
    </style>
    <style name="cart_empty_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="address_billing_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="address_edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="product_category_list_item_text">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">#80fbfbfb</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="product_method_list_item_text" parent="@style/product_category_list_item_text">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="payment_method_selection_helper_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/helperTextLightGrey</item>
    </style>
</resources>
