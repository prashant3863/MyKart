<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_checkout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chi6rag.mykart.CheckoutActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/activity_checkout_fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:id="@+id/checkout_progress_loader_wrapper"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/progressTranslucentWhite">

        <ProgressBar
            android:id="@+id/checkout_progress_loader"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
