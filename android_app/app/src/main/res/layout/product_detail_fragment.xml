<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_detail_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:src="@drawable/skinny_fit_big_pony_polo_1"
        android:transitionName="product_list_item_image" />

    <TextView
        android:id="@+id/product_name"
        style="@style/product_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        tools:text="Skinny-Fit Big Pony Polo"
        android:transitionName="product_list_item_name"/>

    <TextView
        android:id="@+id/product_price"
        style="@style/product_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        tools:text="Rs. 14,999"
        android:transitionName="product_list_item_price" />

    <TextView
        android:id="@+id/product_description"
        style="@style/product_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        tools:text="Lorem Ipsum Dolor" />

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/buttonGreen"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:text="Add To Cart"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</RelativeLayout>