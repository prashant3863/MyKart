<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/product_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/skinny_fit_big_pony_polo_1" />

    <TextView
        android:id="@+id/product_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/product_item_name"
        android:layout_below="@id/product_image"
        tools:text="Skinny-Fit Big Pony Polo" />

    <TextView
        android:id="@+id/product_price"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/product_item_price"
        android:layout_below="@id/product_name"
        tools:text="Rs. 14,999" />

    <TextView
        android:id="@+id/product_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/product_item_description"
        android:layout_below="@id/product_price"
        tools:text="Lorem Ipsum Dolor" />

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentBottom="true"
        android:text="Add"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:background="#40d47e"
        android:padding="8dp" />

</RelativeLayout>